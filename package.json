{
  "name": "social-masonry",
  "version": "1.0.2",
  "type": "module",
  "description": "Beautiful masonry layout for X (Twitter) and Instagram embeds with virtualization support",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./react": {
      "import": "./dist/react/index.esm.js",
      "require": "./dist/react/index.js",
      "types": "./dist/react/index.d.ts"
    },
    "./styles": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "vitest",
    "lint": "eslint src",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "masonry",
    "twitter",
    "x",
    "instagram",
    "social-media",
    "embed",
    "layout",
    "grid",
    "react",
    "virtualization",
    "infinite-scroll"
  ],
  "author": "tkana",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tkana-dev/social-masonry"
  },
  "homepage": "https://tkana.dev/social-masonry/",
  "bugs": {
    "url": "https://github.com/tkana-dev/social-masonry/issues"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "eslint": "^9.17.0",
    "rollup": "^4.9.6",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-postcss": "^4.0.2",
    "tslib": "^2.8.1",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.19.0",
    "vitest": "^4.0.16"
  }
}
